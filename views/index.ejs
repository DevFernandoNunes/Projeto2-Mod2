<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Pokedex</title>
  </head>
  <body>
    <header>
      <a href="/"><h3>Pokedex</h3></a>
      <nav>
        <ul class="nav__links">
          <li><a href="/">Pokedex</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <section id="card">

        <% pokedex.forEach(element => { %>
        <div class="card__container">
          <a href="/detalhes/<%= element.id %> ">
            <div class="card--header">
              <span>ID: <%= element.id %> </span>
              <span>NÂº <%= element.num %> </span>
            </div>
            <div class="card--main">
              <h4><%= element.name %></h4>
              <img src="<%= element.img %>" alt="<%= element.img %>" />
              <div class="card--main--info">
                <span>Weight: <%= element.weight %></span>
                <span>Height: <%= element.height %></span>
              </div>
            </div>
            <div class="card--footer">
              <span>Type: <%= element.type %></span>
            </div>
          </a>
        </div>
        <% }) %>
        
      </section>
    </main>
  </body>
</html>
